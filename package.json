{
  "name": "ite18-activity-2-3-haunted-house",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "main.electron.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "gh-pages -d dist",
    "electron": "cross-env BUILD_TARGET=electron npm run build && electron .",
    "dist": "cross-env BUILD_TARGET=electron npm run build && electron-builder"
  },
  "build": {
    "appId": "com.carsu.ite18.act23",
    "productName": "Haunted House",
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.electron.cjs",
      "preload.*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "HauntedHouse-${version}-Setup.${ext}"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "gh-pages": "^6.3.0",
    "vite": "^4.0.4"
  },
  "dependencies": {
    "lil-gui": "^0.17.0",
    "three": "^0.148.0"
  }
}
